<div class="page-header">
  <%= link_to new_food_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Food
  <% end %>
  <h1>Listing foods</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Price</th>
            <th>Memo</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @foods) do |food| %>
            <td>
			  <%= link_to food do %>
				<%= image_tag food.image.thumb.url %>
			  <% end %>
			</td>
            <td><%= food.name %></td>
            <td><%= food.price %></td>
            <td><%= food.memo %></td>

            <td><%= link_to 'Show', food %></td>
        <td><%= link_to 'Edit', edit_food_path(food) %></td>
        <td><%= link_to 'Destroy', food, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
